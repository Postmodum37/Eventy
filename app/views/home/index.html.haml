/ Modal
#loginModal.modal.fade{"aria-labelledby" => "loginModal", :role => "dialog", :tabindex => "-1"}
  .modal-dialog{:role => "document"}
    .modal-content
      .modal-body
        %ul.nav.nav-tabs{:role => "tablist"}
          %li.nav-item
            %a.nav-link.active{"data-toggle" => "tab", :href => "#login", :role => "tab"}= t('login')
          %li.nav-item
            %a.nav-link{"data-toggle" => "tab", :href => "#register", :role => "tab"}= t('register')
        .tab-content
          #login.tab-pane.fade.in.active{:role => "tabpanel"}
            .row
              .col-lg-12
                = simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-vertical' }) do |f|
                  .form-inputs
                    = f.input :email, required: false, autofocus: true
                    = f.input :password, required: false
                    = f.input :remember_me, as: :boolean if devise_mapping.rememberable?
                  .form-actions
                    = f.button :submit, "Log in"
          #register.tab-pane.fade{:role => "tabpanel"}
            .row
              .col-lg-12
                = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-vertical' }) do |f|
                  = f.error_notification
                  .form-inputs
                    = f.input :email, required: true, autofocus: true
                    = f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length)
                    = f.input :password_confirmation, required: true
                  .form-actions
                    = f.button :submit, "Sign up"
